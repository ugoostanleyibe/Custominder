<?xml version="1.0" encoding="utf-8"?>

<manifest
        package="com.bukkyowoh.promptschedule"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <uses-permission android:name="android.permission.VIBRATE"/>
        <uses-permission android:name="android.permission.RECORD_AUDIO"/>
        <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

        <application
                android:allowBackup="true"
                android:icon="@mipmap/app_icon"
                android:label="@string/app_name"
                android:supportsRtl="true"
                android:theme="@style/AppTheme">

                <activity
                        android:name=".HomeActivity"
                        android:label="@string/app_name"
                        android:screenOrientation="sensorPortrait">

                        <intent-filter>
                                <action android:name="android.intent.action.MAIN"/>
                                <category android:name="android.intent.category.LAUNCHER"/>

                        </intent-filter>

                </activity>

                <activity
                        android:name=".SaveActivity"
                        android:label="@string/save"
                        android:screenOrientation="sensorPortrait"/>

                <activity
                        android:name=".PendingActivity"
                        android:label="@string/pending"
                        android:screenOrientation="sensorPortrait"/>

                <activity
                        android:name=".HistoryActivity"
                        android:label="@string/history"
                        android:screenOrientation="sensorPortrait"/>

                <activity
                        android:name=".SettingsActivity"
                        android:label="@string/settings"
                        android:screenOrientation="sensorPortrait"/>

                <activity
                        android:name=".PSAlarmActivity"
                        android:label="@string/alarm_activity"
                        android:screenOrientation="sensorPortrait"/>

                <receiver android:name=".PSAlarmReceiver" android:process=":remote"/>

                <receiver android:name=".BootCompletedReceiver">

                        <intent-filter>
                                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                                <category android:name="android.intent.category.DEFAULT"/>

                        </intent-filter>

                </receiver>

        </application>

</manifest>